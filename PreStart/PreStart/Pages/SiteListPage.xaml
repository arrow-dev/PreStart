<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PreStart;assembly=PreStart"
             x:Class="PreStart.Pages.SiteListPage"
             Title="Select Your Location">
  <StackLayout Padding="0,20,0,20">
    
    
    <Entry Placeholder="Search Locations"
           Text="{Binding SearchText, Mode=TwoWay}">
      <Entry.Triggers>
        <DataTrigger TargetType="Entry"
                     Binding="{Binding IsBusy}"
                     Value="True">
          <Setter Property="IsEnabled" Value="False"></Setter>
        </DataTrigger>
        
      </Entry.Triggers>
    </Entry>
    <ActivityIndicator IsVisible="{Binding IsBusy}"></ActivityIndicator>
    

    <ListView x:Name="listview"
              ItemsSource="{Binding Sites}"
              RowHeight="50"
              SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Padding="40,0,40,0">
              <Label Text="{Binding Name}" TextColor="{x:Static local:Template.fhBlue}"></Label>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>