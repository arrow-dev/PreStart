<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PreStart.Pages.TaskManagerPage"
             Title="Task Manager">
  <StackLayout>
    
    <StackLayout Orientation="Horizontal">
      <Label Text="Tasks:  " VerticalOptions="Center"></Label>
      <Button Text="+" VerticalOptions="Center" Clicked="AddBtn_OnClick"></Button>
    </StackLayout>
    <StackLayout x:Name="EditContainer" IsVisible="False">
      <Editor Text="{Binding TaskName, Mode=TwoWay}"></Editor>
      <Button Text="Save" Command="{Binding NewCommand}"></Button>
    </StackLayout>
    <ListView ItemsSource="{Binding Tasks}"
              RowHeight="50">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding Description}" HorizontalOptions="FillAndExpand"></Label>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>